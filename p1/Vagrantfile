Vagrant.configure("2") do |config|
  # Use a lightweight box, e.g., Alpine Linux or Ubuntu Minimal
  config.vm.box = "generic/alpine312"  # or "ubuntu/minimal-20.04"

  # VM resources
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "512"
    vb.cpus = 1
  end

  # VM hostname
  config.vm.hostname = "light-vm"

  # Optional: private network
  config.vm.network "private_network", type: "dhcp"

  # Optional: provision commands
  # config.vm.provision "shell", inline: <<-SHELL
  #   apk update && apk add docker
  # SHELL
end

